# ============================================
# ENTORNO
# ============================================
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# ============================================
# BASE DE DATOS
# ============================================
DATABASE_URL=postgresql://lobba_user:your_password@localhost:5432/lobba_dev
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# REDIS
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TLS=false

# ============================================
# TWILIO - WHATSAPP BUSINESS API (Centralizado)
# ============================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WHATSAPP_NUMBER=+34614392922

# ============================================
# TWILIO - VERIFY API (OTP/2FA)
# ============================================
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# SENDGRID (Email)
# ============================================
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=noreply@lobba.es
EMAIL_FROM_NAME=LOBBA

# ============================================
# AUTENTICACIÓN
# ============================================
JWT_SECRET=your_jwt_secret_minimum_32_characters_random
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_secret_different_from_jwt
REFRESH_TOKEN_EXPIRES_IN=30d

# ============================================
# ENCRIPTACIÓN
# ============================================
BCRYPT_ROUNDS=10
ENCRYPTION_KEY=your_encryption_key_32_bytes_hexadecimal

# ============================================
# CORS
# ============================================
CORS_ORIGIN=http://localhost:5173,http://localhost:3001
ALLOWED_ORIGINS=localhost,lobba.es

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# WEBHOOKS
# ============================================
WEBHOOK_SECRET=your_webhook_secret_for_validation

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log

# ============================================
# WEBSOCKETS
# ============================================
WEBSOCKET_PORT=3001
WEBSOCKET_PATH=/socket.io
WEBSOCKET_CORS_ORIGIN=http://localhost:5173

# ============================================
# CRON JOBS
# ============================================
ENABLE_CRON_JOBS=true
REMINDERS_CRON=0 * * * *
SURVEYS_CRON=0 */2 * * *
CLEANUP_CRON=0 0 * * *

# ============================================
# FEATURES FLAGS
# ============================================
FEATURE_CHATBOT_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_ANALYTICS_ENABLED=false
FEATURE_WHATSAPP_CENTRALIZED=true
FEATURE_EMAIL_NOTIFICATIONS=true

# ============================================
# STRIPE
# ============================================
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# GOOGLE
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALENDAR_CLIENT_ID=your-calendar-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-calendar-client-secret

# ============================================
# FIREBASE (FCM - Push Notifications)
# ============================================
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# ============================================
# OPENROUTER (AI)
# ============================================
OPENROUTER_API_KEY=your-openrouter-api-key

# ============================================
# CLOUDINARY
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# MONITORING (Sentry)
# ============================================
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx

# ============================================
# DEVELOPMENT
# ============================================
DEBUG=true
SEED_DATABASE=false
MOCK_TWILIO=false
MOCK_SENDGRID=false
