NODE_ENV=development
PORT=3000

DATABASE_URL=postgresql://user:password@localhost:5432/pwa_lobba
DATABASE_URL_TEST=postgresql://user:password@localhost:5432/pwa_lobba_test

JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this
JWT_REFRESH_EXPIRES_IN=7d

STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

OPENAI_API_KEY=your_openai_api_key
STABILITY_API_KEY=your_stability_api_key

GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY=your_apple_private_key
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3000

WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+your_whatsapp_number

FCM_SERVER_KEY=your_fcm_server_key
FCM_PROJECT_ID=your_fcm_project_id

CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Services Configuration
# Provider options: stability_ai, openai, replicate, openrouter, perfectcorp, mock
# Use 'mock' for development without real AI APIs
AI_PROVIDER=mock
AI_API_KEY=

# OpenRouter Configuration (for nail design generation)
# Get your API key at: https://openrouter.ai/keys
# Uses Gemini/Llama models for text-to-image prompt enhancement
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free

# PerfectCorp Configuration (for hairstyle/makeup AI try-on)
# Contact PerfectCorp for API credentials: https://yce.perfectcorp.com
# Requires client_id and RSA private key for authentication
PERFECTCORP_CLIENT_ID=
PERFECTCORP_CLIENT_SECRET=
PERFECTCORP_BASE_URL=https://yce.perfectcorp.com

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs
