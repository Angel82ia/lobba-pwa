    "axios": "^1.7.2",
    "morgan": "^1.10.0",
    "express-validator": "^7.1.0",
    "winston": "^3.13.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "supertest": "^7.0.0",
